<% layout('layout') %>
<h1>Login</h1>
<% if (message.length > 0) { %>
	<div><%= message %></div>
<% } %>
<form method="post" action="/login">
	<p>
		<label>Username:</label>
		<input type="text" name="username">
	</p>
	<p>
		<label>Password:</label>
		<input type="text" name="password">
	</p>
	<p>
		<input type="submit" value="Login">
	</p>
</form>
